<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/purple</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="missing_field_error_warning">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">@dimen/missing_field_error_text_size</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="fragment_new_skill_set_form_text_style">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:labelFor">@id/new_skillSet_name_input</item>
        <item name="android:padding">@dimen/fragment_new_skill_set._padding_form_text</item>
        <item name="android:textSize">@dimen/fragment_new_skill_set_text_size_form_text</item>
    </style>

    <style name="fragment_new_skill_set_user_form_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingStart">@dimen/fragment_new_skill_set_padding_start_user_input</item>
        <item name="android:paddingEnd">@dimen/fragment_new_skill_set_padding_end_user_input</item>
        <item name="android:textColorHint">@color/fragment_new_skill_set_text_color_of_user_hint
        </item>
    </style>

    <style name="new_skill_set_body_labels">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_style">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/custom_spinner</item>
    </style>

    <style name="fragment_new_skill_set_form_text_style2" parent="fragment_new_skill_set_form_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fragment_new_skill_set_user_form_style3" parent="fragment_new_skill_set_user_form_style">
        <item name="android:layout_marginTop">35sp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="missing_field_error_warningNew" parent="missing_field_error_warning">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">75dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
</resources>